@{
    ViewBag.Title = "Debug Info";
}

<h2>Debug Information</h2>

<div>
    <p><strong>Debug Info:</strong> @ViewBag.DebugInfo</p>
    <p><strong>Request URL:</strong> @Request.Url</p>
    <p><strong>Host:</strong> @Request.Url.Host</p>
    <p><strong>Query String:</strong> @Html.Encode(Request.QueryString.ToString())</p>
</div>

<h3>Available Kindergartens:</h3>
@{
    List<KindergartenSystem.Models.Kindergarten> kindergartens;
    using (var context = new KindergartenSystem.Data.KindergartenContext())
    {
        kindergartens = context.Kindergartens.ToList();
    }
}

@if (kindergartens.Any())
{
    <ul>
        @foreach (var k in kindergartens)
        {
            <li>
                <strong>@k.Name</strong> - Subdomain: @k.Subdomain 
                <a href="?subdomain=@k.Subdomain">Test Link</a>
            </li>
        }
    </ul>
}
else
{
    <p>No kindergartens found in database.</p>
}