@model KindergartenSystem.ViewModels.SettingsViewModel
@{
    ViewBag.Title = "Ayarlar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">
                <i class="fas fa-cog text-primary"></i>
                Sistem Ayarlarý
            </h1>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @using (Html.BeginForm("Settings", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- General Settings -->
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Genel Ayarlar</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.GeneralSettings.Slogan, "Ana Slogan", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.GeneralSettings.Slogan, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.GeneralSettings.SubSlogan, "Alt Slogan", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.GeneralSettings.SubSlogan, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.GeneralSettings.FooterSlogan, "Footer Slogan", new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.GeneralSettings.FooterSlogan, new { @class = "form-control", rows = 2 })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.GeneralSettings.Address, "Adres", new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.GeneralSettings.Address, new { @class = "form-control", rows = 3 })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.GeneralSettings.Phone, "Telefon", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.GeneralSettings.Phone, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.GeneralSettings.Email, "E-posta", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.GeneralSettings.Email, new { @class = "form-control", type = "email" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(m => m.GeneralSettings.FacebookUrl, "Facebook URL", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.GeneralSettings.FacebookUrl, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(m => m.GeneralSettings.TwitterUrl, "Twitter URL", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.GeneralSettings.TwitterUrl, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(m => m.GeneralSettings.InstagramUrl, "Instagram URL", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.GeneralSettings.InstagramUrl, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.GeneralSettings.GoogleMapEmbed, "Google Maps Embed Kodu", new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.GeneralSettings.GoogleMapEmbed, new { @class = "form-control", rows = 4 })
                        </div>
                    </div>
                </div>

                <!-- Mission & Vision -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Misyon & Vizyon</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.MissionVision.MissionTitle, "Misyon Baþlýðý", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.MissionVision.MissionTitle, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.MissionVision.VisionTitle, "Vizyon Baþlýðý", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.MissionVision.VisionTitle, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.MissionVision.MissionText, "Misyon Metni", new { @class = "form-label" })
                                @Html.TextAreaFor(m => m.MissionVision.MissionText, new { @class = "form-control", rows = 4 })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.MissionVision.VisionText, "Vizyon Metni", new { @class = "form-label" })
                                @Html.TextAreaFor(m => m.MissionVision.VisionText, new { @class = "form-control", rows = 4 })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- File Uploads -->
            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Dosya Yüklemeleri</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label">Logo Yükle</label>
                            @if (!string.IsNullOrEmpty(Model.GeneralSettings.LogoPath))
                            {
                                <div class="mb-2">
                                    <img src="@Model.GeneralSettings.LogoPath" alt="Current Logo" style="max-width: 100px; max-height: 50px;" />
                                </div>
                            }
                            <input type="file" name="logoFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Footer Logo Yükle</label>
                            @if (!string.IsNullOrEmpty(Model.GeneralSettings.FooterLogoPath))
                            {
                                <div class="mb-2">
                                    <img src="@Model.GeneralSettings.FooterLogoPath" alt="Current Footer Logo" style="max-width: 100px; max-height: 50px;" />
                                </div>
                            }
                            <input type="file" name="footerLogoFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Ana Sayfa Arkaplan Resmi</label>
                            @if (!string.IsNullOrEmpty(Model.GeneralSettings.HeroBackgroundPath))
                            {
                                <div class="mb-2">
                                    <img src="@Model.GeneralSettings.HeroBackgroundPath" alt="Current Background" style="max-width: 100px; max-height: 50px;" />
                                </div>
                            }
                            <input type="file" name="heroBackgroundFile" class="form-control" accept="image/*" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-save"></i> Ayarlarý Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>