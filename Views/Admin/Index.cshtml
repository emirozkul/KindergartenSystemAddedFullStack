@model KindergartenSystem.ViewModels.AdminDashboardViewModel
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">
                <i class="fas fa-tachometer-alt text-primary"></i>
                Dashboard - @Model.KindergartenName
            </h1>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Etkinlik</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalEvents</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Personel Sayýsý</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalStaff</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Eðitim Programlarý</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalPrograms</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Veli Yorumlarý</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalTestimonials</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Recent Contact Submissions -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Son Ýletiþim Mesajlarý</h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentContactSubmissions != null && Model.RecentContactSubmissions.Any())
                    {
                        foreach (var contact in Model.RecentContactSubmissions)
                        {
                            <div class="media mb-3">
                                <div class="media-body">
                                    <h6 class="mt-0">@contact.FirstName @contact.LastName</h6>
                                    <small class="text-muted">@contact.Email - @contact.SubmittedDate.ToString("dd.MM.yyyy HH:mm")</small>
                                    <p class="mb-1">@contact.Subject</p>
                                    <p class="text-muted small">@(contact.Message.Length > 100 ? contact.Message.Substring(0, 100) + "..." : contact.Message)</p>
                                </div>
                            </div>
                            <hr />
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz iletiþim mesajý bulunmuyor.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Announcements -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Son Duyurular</h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentAnnouncements != null && Model.RecentAnnouncements.Any())
                    {
                        foreach (var announcement in Model.RecentAnnouncements)
                        {
                            <div class="media mb-3">
                                <div class="media-body">
                                    <h6 class="mt-0">@announcement.Title</h6>
                                    <small class="text-muted">@announcement.AnnouncementDate.ToString("dd.MM.yyyy")</small>
                                    <p class="text-muted small">@(announcement.Description != null && announcement.Description.Length > 100 ? announcement.Description.Substring(0, 100) + "..." : announcement.Description)</p>
                                </div>
                            </div>
                            <hr />
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz duyuru bulunmuyor.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Hýzlý Ýþlemler</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Settings", "Admin")" class="btn btn-primary btn-block">
                                <i class="fas fa-cog"></i> Ayarlar
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Events")" class="btn btn-success btn-block">
                                <i class="fas fa-calendar-plus"></i> Yeni Etkinlik
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Staff")" class="btn btn-info btn-block">
                                <i class="fas fa-user-plus"></i> Personel Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Announcements")" class="btn btn-warning btn-block">
                                <i class="fas fa-bullhorn"></i> Duyuru Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>