@model KindergartenSystem.ViewModels.SuperAdminDashboardViewModel
@{
    ViewBag.Title = "SuperAdmin Dashboard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2>SuperAdmin Dashboard</h2>
            <p class="text-muted">Manage all kindergartens and users in the system</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Total Kindergartens</h5>
                            <h3>@Model.TotalKindergartens</h3>
                            <small>@Model.ActiveKindergartens active</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-school fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Kindergartens")" class="text-white">
                        <small>Manage kindergartens <i class="fas fa-arrow-right"></i></small>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Total Users</h5>
                            <h3>@Model.TotalUsers</h3>
                            <small>@Model.ActiveUsers active</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Users")" class="text-white">
                        <small>Manage users <i class="fas fa-arrow-right"></i></small>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">System Health</h5>
                            <h3><i class="fas fa-check-circle"></i></h3>
                            <small>All systems operational</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-heartbeat fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Database Status</h5>
                            <h3><i class="fas fa-database"></i></h3>
                            <small>Connected</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-server fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-school mr-2"></i>Recent Kindergartens</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentKindergartens != null && Model.RecentKindergartens.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Subdomain</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kindergarten in Model.RecentKindergartens)
                                    {
                                        <tr>
                                            <td>@kindergarten.Name</td>
                                            <td>
                                                <code>@kindergarten.Subdomain</code>
                                            </td>
                                            <td>
                                                @if (kindergarten.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>@kindergarten.CreatedDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center">
                            <a href="@Url.Action("Kindergartens")" class="btn btn-primary btn-sm">View All Kindergartens</a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No kindergartens found</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-users mr-2"></i>Recent Users</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentUsers != null && Model.RecentUsers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Role</th>
                                        <th>Kindergarten</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.RecentUsers)
                                    {
                                        <tr>
                                            <td>@user.Username</td>
                                            <td>
                                                @if (user.Role == "SuperAdmin")
                                                {
                                                    <span class="badge badge-danger">@user.Role</span>
                                                }
                                                else if (user.Role == "KindergartenAdmin")
                                                {
                                                    <span class="badge badge-primary">Admin</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@user.Role</span>
                                                }
                                            </td>
                                            <td>@(user.Kindergarten?.Name ?? "N/A")</td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center">
                            <a href="@Url.Action("Users")" class="btn btn-primary btn-sm">View All Users</a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No users found</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-plus mr-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="@Url.Action("CreateKindergarten")" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-school"></i><br />
                                Add Kindergarten
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("CreateUser")" class="btn btn-outline-success btn-block">
                                <i class="fas fa-user-plus"></i><br />
                                Add User
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Kindergartens")" class="btn btn-outline-info btn-block">
                                <i class="fas fa-list"></i><br />
                                Manage Kindergartens
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Users")" class="btn btn-outline-warning btn-block">
                                <i class="fas fa-users-cog"></i><br />
                                Manage Users
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>