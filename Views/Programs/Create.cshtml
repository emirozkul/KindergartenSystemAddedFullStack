@model KindergartenSystem.Models.CoreEducationProgram
@{
    ViewBag.Title = "Create Program";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2>Create New Program</h2>
                    <p class="text-muted">Add a new educational program to your kindergarten</p>
                </div>
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-2"></i>Back to Programs
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Programs", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Enter program title" })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Icon, new { @class = "form-label" })
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Icon, new { @class = "form-control", placeholder = "fas fa-palette" })
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-outline-secondary" onclick="showIconPreview()">
                                        <i class="fas fa-eye"></i> Preview
                                    </button>
                                </div>
                            </div>
                            <small class="form-text text-muted">
                                Use Font Awesome classes (e.g., fas fa-palette, fas fa-music, fas fa-running)
                                <a href="https://fontawesome.com/icons" target="_blank">Browse icons</a>
                            </small>
                            @Html.ValidationMessageFor(model => model.Icon, "", new { @class = "text-danger" })
                            <div id="iconPreview" class="mt-2" style="display: none;">
                                <i id="previewIcon" class="fa-2x"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4, placeholder = "Describe this educational program..." })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DisplayOrder, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control", type = "number", min = "1", placeholder = "1" })
                                    @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                                    <small class="form-text text-muted">Order in which this program appears on the website</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Status</label>
                                    <div class="form-check">
                                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" })
                                        @Html.LabelFor(model => model.IsActive, "Active", new { @class = "form-check-label" })
                                    </div>
                                    <small class="form-text text-muted">Only active programs are shown on the website</small>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save mr-2"></i>Create Program
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg ml-2">
                                <i class="fas fa-times mr-2"></i>Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle mr-2"></i>Tips</h5>
                </div>
                <div class="card-body">
                    <h6>Program Title</h6>
                    <p class="small text-muted">Keep it clear and descriptive. Examples: "Art & Creativity", "Music & Rhythm", "Physical Development"</p>
                    
                    <h6>Icon Selection</h6>
                    <p class="small text-muted">Popular choices:</p>
                    <ul class="small text-muted">
                        <li><i class="fas fa-palette"></i> fas fa-palette (Art)</li>
                        <li><i class="fas fa-music"></i> fas fa-music (Music)</li>
                        <li><i class="fas fa-running"></i> fas fa-running (Sports)</li>
                        <li><i class="fas fa-book"></i> fas fa-book (Reading)</li>
                        <li><i class="fas fa-calculator"></i> fas fa-calculator (Math)</li>
                    </ul>
                    
                    <h6>Description</h6>
                    <p class="small text-muted">Explain what children will learn and how this program benefits their development.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showIconPreview() {
        var iconClass = document.getElementById('Icon').value;
        if (iconClass) {
            document.getElementById('previewIcon').className = iconClass + ' fa-2x';
            document.getElementById('iconPreview').style.display = 'block';
        } else {
            document.getElementById('iconPreview').style.display = 'none';
        }
    }

    // Real-time icon preview
    document.getElementById('Icon').addEventListener('input', function() {
        showIconPreview();
    });
</script>