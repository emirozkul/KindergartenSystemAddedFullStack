@model List<KindergartenSystem.Models.CoreEducationProgram>
@{
    ViewBag.Title = "Core Education Programs";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2>Core Education Programs</h2>
                    <p class="text-muted">Manage your kindergarten's educational programs</p>
                </div>
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus mr-2"></i>Add New Program
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Order</th>
                                        <th>Icon</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var program in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge badge-secondary">@program.DisplayOrder</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(program.Icon))
                                                {
                                                    <i class="@program.Icon fa-lg"></i>
                                                }
                                            </td>
                                            <td>
                                                <strong>@program.Title</strong>
                                            </td>
                                            <td>
                                                @if (program.Description != null && program.Description.Length > 100)
                                                {
                                                    @Html.Raw(program.Description.Substring(0, 100) + "...")
                                                }
                                                else
                                                {
                                                    @Html.Raw(program.Description)
                                                }
                                            </td>
                                            <td>
                                                @if (program.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = program.Id })" class="btn btn-sm btn-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = program.Id })" class="btn btn-sm btn-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = program.Id })" class="btn btn-sm btn-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-graduation-cap fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Programs Found</h4>
                            <p class="text-muted">Create your first educational program to get started.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>Add First Program
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add drag and drop functionality for reordering (optional enhancement)
    $(document).ready(function() {
        // Initialize sortable if needed
        // You can add jQuery UI sortable here for drag-and-drop reordering
    });
</script>